{
  "name": "mcp-server-gateway",
  "version": "1.0.0",
  "description": "A gateway that aggregates multiple MCP servers into a single endpoint for Claude Code",
  "main": "dist/index.js",
  "bin": {
    "mcp-gateway": "dist/index.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "link": "npm run build && npm link",
    "unlink": "npm unlink -g mcp-server-gateway"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "gateway",
    "aggregator",
    "claude-code",
    "anthropic"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.2",
    "content-type": "^1.0.5",
    "raw-body": "^3.0.2"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.6.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

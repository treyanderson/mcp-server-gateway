{
  "gateway": {
    "name": "mcp-gateway",
    "version": "1.0.0",
    "toolSearch": {
      "enabled": true,
      "maxResults": 5
    }
  },
  "servers": {
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "${HOME}"]
    },
    "memory": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-memory"]
    }
  }
}
